@model IEnumerable<Platinum_Gym_System.Models.Sale>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SaleDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SaleDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SaleId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SaleId">Details</a> |
                @* <a asp-action="Delete" asp-route-id="@item.SaleId">Delete</a> *@
                    @if (!item.IsCancelled)
                    {
                        <a class="btn btn-danger btn-sm" asp-action="Cancel" asp-route-id="@item.SaleId">Anular</a>
                    }
                    else
                    {
                        <span class="badge bg-danger">Anulada</span>
                    }

            </td>
        </tr>
}
    </tbody>
</table>
