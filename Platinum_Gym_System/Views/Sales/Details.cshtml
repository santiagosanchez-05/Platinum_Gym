@model Platinum_Gym_System.Models.Sale

@{
    ViewData["Title"] = "Detalles de Venta";
}

<h1>Detalles de Venta</h1>

<hr />

<h4>Información de la Venta</h4>
<dl class="row">
    <dt class="col-sm-2">Fecha</dt>
    <dd class="col-sm-10">@Model.SaleDate</dd>

    <dt class="col-sm-2">Total</dt>
    <dd class="col-sm-10">$@Model.Total.ToString("N2")</dd>
</dl>

<hr />

@if (Model.SaleDetails != null && Model.SaleDetails.Any())
{
    <h4>Productos Vendidos</h4>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Producto</th>
                <th>Cantidad</th>
                <th>Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.SaleDetails)
            {
                <tr>
                    <td>@item.Product?.ProductName</td>
                    <td>@item.Quantity</td>
                    <td>$@item.Subtotal.ToString("N2")</td>
                </tr>
            }
        </tbody>
    </table>
}

<hr />

@if (Model.SalePayments != null && Model.SalePayments.Any())
{
    <h4>Métodos de Pago</h4>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Método</th>
                <th>Monto</th>
                <th>Fecha</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model.SalePayments)
            {
                <tr>
                    <td>@p.PaymentMethod</td>
                    <td>$@p.Amount.ToString("N2")</td>
                    <td>@p.PaymentDate.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
}

<hr />

@if (Model.IsCancelled)
{
    <h4 class="text-danger">⚠ Venta Anulada</h4>

    @if (Model.Cancellations != null)
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Fecha</th>
                    <th>Usuario</th>
                    <th>Motivo</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model.Cancellations)
                {
                    <tr>
                        <td>@c.CancellationDate</td>
                        <td>@c.CancelledBy</td>
                        <td>@c.Reason</td>
                    </tr>
                }
            </tbody>
        </table>
    }
}

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.SaleId" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>

    @if (!Model.IsCancelled)
    {
        <a asp-action="Cancel" asp-route-id="@Model?.SaleId" class="btn btn-danger">
            Anular Venta
        </a>
    }
    }
</div>
