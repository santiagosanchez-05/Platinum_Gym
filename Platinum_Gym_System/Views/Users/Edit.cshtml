@model Platinum_Gym_System.Models.User

@{
    ViewData["Title"] = "Edit";
}

<link rel="stylesheet" href="~/css/CreateNewClientStyleSheet.css" />

<h1>Edit</h1>
<h4>User</h4>
<hr />

<div class="row">
    <div class="col-md-8 mx-auto">
        <form asp-action="Edit" class="create-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- ID OCULTO -->
            <input type="hidden" asp-for="UserId" />

            <!-- PERSONAL INFORMATION -->
            <div class="form-section">
                <h5 class="section-title">Personal Information</h5>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="BillingName" class="form-label"></label>
                            <input asp-for="BillingName" class="form-control" placeholder="Enter full name" />
                            <span asp-validation-for="BillingName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="CI" class="form-label"></label>
                            <input asp-for="CI" class="form-control" placeholder="Enter identification number" />
                            <span asp-validation-for="CI" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" placeholder="Enter email address" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <!-- ACCOUNT SETTINGS -->
            <div class="form-section">
                <h5 class="section-title">Account Settings</h5>

                <div class="form-group">
                    <label asp-for="Role" class="form-label"></label>
                    <select asp-for="Role" class="form-control">
                        <option value="1">Admin</option>
                        <option value="2">Recepcionista</option>
                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="State" class="form-label"></label>
                    <select asp-for="State" class="form-control">
                        <option value="1">Active</option>
                        <option value="0">Inactive</option>
                    </select>
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>
            </div>

            <!-- ACTIONS -->
            <div class="form-actions">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to List
                </a>

                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>Save Changes
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
