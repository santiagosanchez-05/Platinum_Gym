@model Platinum_Gym_System.ViewModels.SubscriptionRenewVM

<h2>Renovar Suscripción</h2>

<form asp-action="Renew">
    <input type="hidden" asp-for="UserId" />

    <div class="form-group">
        <label>Plan</label>
        <select asp-for="PlanId" class="form-control"
                asp-items="@(new SelectList(Model.Plans, "PlanId", "Name"))">
            <option value="">-- Seleccionar Plan --</option>
        </select>
    </div>

    <div class="form-group">
        <label>Método de Pago</label>
        <select asp-for="PaymentMethod" class="form-control">
            <option>Efectivo</option>
            <option>QR</option>
            <option>Tarjeta</option>
        </select>
    </div>

    <br />
    <button type="submit" class="btn btn-success">Renovar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
